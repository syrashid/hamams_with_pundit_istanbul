<p id="notice"><%= notice %></p>

<h1>Hamams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hamams.each do |hamam| %>
      <tr>
        <td><%= hamam.name %></td>
        <td><%= hamam.user.email %></td>
        <td><%= link_to 'Show', hamam %></td>
        <% if policy(hamam).edit? %>
        <td><%= link_to 'Edit', edit_hamam_path(hamam) %></td>
        <td><%= link_to 'Destroy', hamam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hamam', new_hamam_path %>
